# =====================================================
# SUPABASE ENVIRONMENT VARIABLES
# =====================================================
# Copy this to .env and fill in your actual values
# NEVER commit .env to git

# Supabase Configuration
SUPABASE_URL=eee
SUPABASE_ANON_KEY=eee
SUPABASE_SERVICE_ROLE_KEY=eee

# Database Connection (for direct PostgreSQL access)
DATABASE_URL=postgresql:eee

# Google Gemini API
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro-latest

# Storage Buckets
RESUME_BUCKET=career-resumes
AVATAR_BUCKET=user-avatars
PROJECT_BUCKET=project-thumbnails

# Security
JWT_SECRET=your-jwt-secret
RATE_LIMIT_PER_MINUTE=10

# External Services (Optional)
SENTRY_DSN=your-sentry-dsn-here
OPENAI_API_KEY=your-openai-key-for-fallback

# Email Configuration (Supabase Auth)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Production Flags
NODE_ENV=development
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
